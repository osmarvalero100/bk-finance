# Archivo de configuración de variables de entorno
# Copia este archivo como .env y configura los valores según tu entorno

# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===========================================
# URL de conexión a la base de datos
# Formatos soportados:
# - MySQL: mysql+pymysql://usuario:contraseña@host:puerto/nombre_db
# - PostgreSQL: postgresql://usuario:contraseña@host:puerto/nombre_db
# - SQLite: sqlite:///./nombre_db.db
DATABASE_URL=mysql+pymysql://usuario:contraseña@localhost:3306/finance_db

# ===========================================
# CONFIGURACIÓN DE JWT (JSON Web Tokens)
# ===========================================
# Clave secreta para firmar los tokens JWT
# IMPORTANTE: Cambia esto en producción con una clave segura y única
SECRET_KEY=tu-clave-super-secreta-cambiala-en-produccion-minimo-32-caracteres

# Algoritmo de encriptación para JWT
ALGORITHM=HS256

# Tiempo de expiración de los tokens de acceso en minutos
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# CONFIGURACIÓN DEL SERVIDOR API
# ===========================================
# Host donde se ejecutará el servidor
API_HOST=localhost

# Puerto donde se ejecutará el servidor
API_PORT=8000

# Modo debug (True para desarrollo, False para producción)
DEBUG=True

# ===========================================
# CONFIGURACIÓN DE CORS (Cross-Origin Resource Sharing)
# ===========================================
# Orígenes permitidos para solicitudes CORS
# Lista de URLs separadas por comas que pueden acceder a la API
# Ejemplos: http://localhost:3000, https://miapp.com, http://127.0.0.1:8080
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "https://miapp.com"]